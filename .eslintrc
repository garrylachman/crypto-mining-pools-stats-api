{
  "extends": [
    "airbnb"
  ],
  "env": {
    "node": true,
    "mocha": true
  },

  "rules": {
    "arrow-body-style": 0,
    "import/newline-after-import": 0,
    // specify the maximum length of a line in your program
    // http://eslint.org/docs/rules/max-len
    "max-len": ["error", 160, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
    }],
    "comma-dangle": 0,
    "padded-blocks": 0
  }
}
